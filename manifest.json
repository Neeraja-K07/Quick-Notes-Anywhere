{
    "manifest_version": 3,
    "name": "Quick Notes Anywhere",
    "version": "1.0",
    "description": "Take quick notes per website and store them locally with auto-save and dark mode.",
    "permissions": ["storage", "tabs", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "48": "icon.png"
    }
  }
  